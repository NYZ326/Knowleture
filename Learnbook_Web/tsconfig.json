{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "wwwroot/dist/app",
    "removeComments": false,
    "rootDir": "App/src",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },
  "compileOnSave": true,
  "angularCompilerOptions": {
    "debug": true,
    "genDir": "."
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "typings"
  ]
}
